<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Περμίσια -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Η πραγματική αρχική Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <!-- ΜΟΝΟ αυτό είναι LAUNCHER (alias προς το νέο path) -->
        <activity-alias
            android:name=".MainActivity"
            android:exported="true"
            android:targetActivity=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Υπόλοιπες Activities (ΧΩΡΙΣ intent-filters, exported=false) -->
        <activity android:name=".ui.AddPatientActivity" android:exported="false" />
        <activity android:name=".ui.PatientListActivity" android:exported="false" />
        <activity android:name=".ui.PatientDetailActivity" android:exported="false" />
        <activity android:name=".ui.NewAppointmentActivity" android:exported="false" />
        <activity android:name=".ui.AppointmentActivity" android:exported="false" />
        <activity android:name=".ui.AppointmentCalendarActivity" android:exported="false" />
        <activity android:name=".ui.EditAppointmentActivity" android:exported="false" />
        <activity android:name=".ui.NewVisitActivity" android:exported="false" />
        <activity android:name=".ui.VisitListActivity" android:exported="false" />
        <activity android:name=".ui.VisitCalendarActivity" android:exported="false" />
        <activity android:name=".ui.FullscreenPhotoActivity" android:exported="false" />

    </application>
</manifest>
