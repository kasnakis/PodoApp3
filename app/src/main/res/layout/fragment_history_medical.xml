<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Θεράπων ιατρός" android:textStyle="bold"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etDoctorName" android:hint="Όνομα"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etDoctorPhone" android:hint="Τηλέφωνο"
                    android:inputType="phone"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout android:orientation="vertical" android:padding="12dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Αναμνηστικό / Αλλεργίες" android:textStyle="bold"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etDiagnosis" android:hint="Διάγνωση ιατρού"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etMedication" android:hint="Φαρμακευτική αγωγή"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etAllergies" android:hint="Αλλεργίες"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="12dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Διαβήτης" android:textStyle="bold"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Switch android:id="@+id/switchDiabetic" android:text="Διαβητικός;"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Spinner android:id="@+id/spinnerDiabeticType"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etInsulinNotes" android:hint="Σημειώσεις ινσουλίνης"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etPillsNotes" android:hint="Σημειώσεις χαπιών"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etOtherConditions" android:hint="Άλλες παθήσεις/συνθήκες"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etAnticoagulants" android:hint="Αντιπηκτική αγωγή"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etContagious" android:hint="Μεταδοτικά νοσήματα"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
