<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointmentCalendarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Ημερομηνία που έχει επιλεγεί -->
    <TextView
        android:id="@+id/textSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ημερομηνία"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Επιλογή ημερομηνίας -->
    <Button
        android:id="@+id/buttonPickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιλογή Ημερομηνίας"
        android:layout_marginBottom="12dp" />

    <!-- Λίστα ραντεβού της ημέρας -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDayAppointments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
