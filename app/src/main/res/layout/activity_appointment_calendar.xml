<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointmentCalendarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Placeholder header -->
    <TextView
        android:id="@+id/tvCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ημερολόγιο Ραντεβού (προσωρινό)"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <!-- Προσωρινό κενό περιεχόμενο
         (Θα αντικατασταθεί με RecyclerView + DatePicker) -->
    <TextView
        android:id="@+id/tvCalendarEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Εδώ θα εμφανίζονται τα ραντεβού της ημέρας."
        android:textSize="16sp" />

</LinearLayout>
