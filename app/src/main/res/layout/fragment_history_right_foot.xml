<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <CheckBox android:id="@+id/cbRightHyperkeratosis"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Υπερκεράτωση (δεξί)"/>

        <CheckBox android:id="@+id/cbRightHalluxValgus"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κότσι / Hallux Valgus (δεξί)"/>

        <CheckBox android:id="@+id/cbRightWarts"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κονδυλώματα (δεξί)"/>

        <CheckBox android:id="@+id/cbRightDermatophytosis"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Δερματοφυτία (δεξί)"/>

        <!-- ΝΕΑ: Κάλοι booleans -->
        <CheckBox
            android:id="@+id/cbCornDorsalRight"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κάλοι ραχιαίοι (δεξί)"/>

        <CheckBox
            android:id="@+id/cbCornPlantarRight"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κάλοι πελματιαίοι (δεξί)"/>

        <!-- Notes -->
        <EditText android:id="@+id/etRightDorsalCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι ραχιαίοι – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightInterdigitalCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι μεσοδακτύλιοι – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightPlantarCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι πελματιαίοι – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightHammerToeNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Σφυροδακτυλία – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightOnychomycosisNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ονυχομυκητίαση – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightOnychocryptosisNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ονυχοκρύπτωση – σημειώσεις (δεξί)" />

        <EditText android:id="@+id/etRightNailStatusNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κατάσταση νυχιών – σημειώσεις (δεξί)" />
    </LinearLayout>
</ScrollView>
