<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <CheckBox android:id="@+id/cbLeftHyperkeratosis"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Υπερκεράτωση (αριστερό)"/>

        <CheckBox android:id="@+id/cbLeftHalluxValgus"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κότσι / Hallux Valgus (αριστερό)"/>

        <CheckBox android:id="@+id/cbLeftWarts"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κονδυλώματα (αριστερό)"/>

        <CheckBox android:id="@+id/cbLeftDermatophytosis"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Δερματοφυτία (αριστερό)"/>

        <!-- ΝΕΑ: Κάλοι booleans -->
        <CheckBox
            android:id="@+id/cbCornDorsalLeft"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κάλοι ραχιαίοι (αριστερό)"/>

        <CheckBox
            android:id="@+id/cbCornPlantarLeft"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Κάλοι πελματιαίοι (αριστερό)"/>

        <!-- Notes -->
        <EditText android:id="@+id/etLeftDorsalCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι ραχιαίοι – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftInterdigitalCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι μεσοδακτύλιοι – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftPlantarCallusesNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κάλοι πελματιαίοι – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftHammerToeNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Σφυροδακτυλία – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftOnychomycosisNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ονυχομυκητίαση – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftOnychocryptosisNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Ονυχοκρύπτωση – σημειώσεις (αριστερό)" />

        <EditText android:id="@+id/etLeftNailStatusNotes"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="Κατάσταση νυχιών – σημειώσεις (αριστερό)" />

    </LinearLayout>
</ScrollView>
