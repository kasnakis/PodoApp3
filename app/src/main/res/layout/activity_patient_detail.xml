<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/patientActionsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnVisitHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ιστορικό Επισκέψεων" />

            <Button
                android:id="@+id/btnPatientAppointments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Ραντεβού" />

            <Button
                android:id="@+id/btnNewAppointment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Νέο Ραντεβού" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOpenHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Αναμνηστικό (History Tabs)"/>

        <TextView
            android:id="@+id/textPatientNameHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Όνομα πελάτη"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ονοματεπώνυμο Ιατρού" />

        <EditText
            android:id="@+id/etDoctorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Τηλέφωνο Ιατρού"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Διάγνωση ιατρού" />

        <EditText
            android:id="@+id/etMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Φαρμακευτική αγωγή" />

        <EditText
            android:id="@+id/etAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Αλλεργίες" />

        <EditText
            android:id="@+id/etDoctorDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Διάγνωση" />

        <Switch
            android:id="@+id/switchDiabetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Διαβητικός" />

        <Spinner
            android:id="@+id/spinnerDiabeticType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etInsulinNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Σημειώσεις ινσουλίνης" />

        <EditText
            android:id="@+id/etPillsNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Σημειώσεις για χάπια" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Παραμορφώσεις/Στάση"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox android:id="@+id/cbMetatarsalDrop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Πτώση Μεταταρσίου" />
        <CheckBox android:id="@+id/cbValgus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Βλαισός" />
        <CheckBox android:id="@+id/cbVarus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ραιβός" />
        <CheckBox android:id="@+id/cbEquinus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ιπποποδία" />
        <CheckBox android:id="@+id/cbCavus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Κοιλοποδία" />
        <CheckBox android:id="@+id/cbFlatfoot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Πλατυποδία" />
        <CheckBox android:id="@+id/cbPronation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Πρηνισμός" />
        <CheckBox android:id="@+id/cbSupination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Υπτιασμός" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Αγγειακά (Δεξί πόδι)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox android:id="@+id/cbEdemaRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Οίδημα" />
        <CheckBox android:id="@+id/cbVaricoseDorsalRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Κιρσοί ραχιαίοι" />
        <CheckBox android:id="@+id/cbVaricosePlantarRight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Κιρσοί πελματιαίοι" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Αγγειακά (Αριστερό πόδι)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox android:id="@+id/cbEdemaLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Οίδημα" />
        <CheckBox android:id="@+id/cbVaricoseDorsalLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Κιρσοί ραχιαίοι" />
        <CheckBox android:id="@+id/cbVaricosePlantarLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Κιρσοί πελματιαίοι" />

        <EditText
            android:id="@+id/etSplintNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Νάρθηκας - σημειώσεις" />

        <Spinner
            android:id="@+id/spinnerOrthoticType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Φωτογραφίες"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAddFromCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Από κάμερα" />
            <Button
                android:id="@+id/btnAddFromGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Από συλλογή" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPatientPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btnSaveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Αποθήκευση Ιστορικού" />
    </LinearLayout>
</ScrollView>