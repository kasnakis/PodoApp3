<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/podo_surface"
    tools:context=".ui.PatientHistoryTabsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/podo_tab_bg"
        app:tabIndicatorColor="@color/podo_tab_indicator"
        app:tabSelectedTextColor="@color/podo_tab_text_selected"
        app:tabTextColor="@color/podo_tab_text_unselected"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Κουμπί Αποθήκευσης (μένει Button για να ταιριάζει με τον κώδικα) -->
    <Button
        android:id="@+id/btnSaveAll"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:text="Αποθήκευση Αναμνηστικού"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/podo_on_primary"
        android:backgroundTint="@color/podo_primary"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
